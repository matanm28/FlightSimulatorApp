<Window x:Class="FlightSimulatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:PresentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
        xmlns:local="clr-namespace:FlightSimulatorApp"
        xmlns:external="clr-namespace:FlightSimulatorApp.Controls"
        mc:Ignorable="PresentationOptions"
        Title="MainWindow" Height="500" Width="800"  LostKeyboardFocus="Window_LostKeyboardFocus">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <external:ControlsDisplay Grid.Column="2" Grid.Row="1" Grid.RowSpan="4"></external:ControlsDisplay>
        <Slider x:Name="throttle" Grid.Column="3" Grid.Row="1" Grid.RowSpan="2" VerticalAlignment="Center" Value="0" Maximum="1" Minimum="-1" SmallChange="0.01" LargeChange="0.1" Orientation="Vertical" TickPlacement="BottomRight" TickFrequency="0.1" MinWidth="20" MinHeight="300" IsMoveToPointEnabled="True" MouseDoubleClick="Throttle_MouseDoubleClick" ></Slider>
        <Slider x:Name="rudder" Grid.Column="3" Grid.ColumnSpan="2" Grid.Row="3" Margin="30 20 0 0" HorizontalAlignment="Center" Value="0" Maximum="1" Minimum="-1" SmallChange="0.01" LargeChange="0.1" Orientation="Horizontal" TickPlacement="BottomRight" TickFrequency="0.1" MinWidth="350" MinHeight="20" IsMoveToPointEnabled="True" MouseDoubleClick="Throttle_MouseDoubleClick"></Slider>
        <external:Joystick x:Name="Joystick"  Grid.Column="4" Grid.Row="1" Grid.RowSpan ="2"></external:Joystick>
    </Grid>
</Window>
